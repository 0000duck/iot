<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <!--  This sample uses conditional ItemGroups, but you only need one of them.
        The ProjectReference is used by the repo build, to ensure that the samples work
        with new builds of the System.Device.Gpio project.
        The PackageReference is intended for most user use-cases.
        If you want to test the package, type `dotnet build /p:PreferPackageReference=true`
        If you want to copy this project and use outside of the repo, then:

          1. Delete the first ItemGroup.
          2. Remove the Condition from second ItemGroup
   -->

  <ItemGroup Condition="!$(PreferPackageReference)">
    <ProjectReference Include="$(MainLibraryPath)System.Device.Gpio.csproj" />
  </ItemGroup>

  <ItemGroup Condition="$(PreferPackageReference)">
    <PackageReference Include="System.Device.Gpio" Version="1.1.0-prerelease.20153.1" />
  </ItemGroup>

</Project>
